{% extends 'admin/dashboard.html.twig' %}

{% block main_title %}English{% endblock %}

{% block main_body %}
    <div class="mb-3">
        <a type="button" class="btn btn-primary" href="{{ path('admin_english_create_youtube') }}">Create Youtube post</a>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Duration</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('english_video_detail', {id: post.id}) }}" target="_blank">{{ post.id }}</a></td>
                <td><a href="{{ path('english_category_detail', {id: post.videoCategory.id}) }}" target="_blank">{{ post.videoCategory.name }}</a></td>
                <td>
                    {% if post.thumbnail is not null %}
                        <a href="{{ post.thumbnail }}" target="_blank">
                            <img src="{{ post.thumbnail }}" width="50" alt="">
                        </a>
                    {% endif %}
                </td>
                <td>{{ post.name }}</td>
                <td>{{ post.type }}</td>
                <td>{{ post.duration }}</td>
                <td>
                    <a href="{{ path('admin_english_update', {id: post.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">No posts found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
