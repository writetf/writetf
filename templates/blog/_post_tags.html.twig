{% if not post.tags.empty %}
    <p class="post-tags mb-0 pb-2">
        {% for tag in post.tags %}
            <a href="{{ path('blog_tag_index', {'tagName': tag.name == app.request.query.get('tag') ? null : tag.name}) }}"
               {% if tagName %}
                class="label text-decoration-none label-{{ tag.name == tagName ? 'success' : 'default' }}"
               {% else %}
                   class="label label-default text-decoration-none"
               {% endif %}
            >
                <span class="tag">#{{ tag.name }}</span>
            </a>
        {% endfor %}
    </p>
{% endif %}
