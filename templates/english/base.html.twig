<html lang="en">
<head>
    {% block stylesheets %}{{ encore_entry_link_tags('english') }}{% endblock %}
    <title>{% block title_header %}Learning English PRO{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="icon" href="/images/learning-english.ico" type="image/x-icon"/>
</head>
<body class="{% block body_class %}index{% endblock %}">
{% block nav %}
    <div class="nav">
        <div class="nav-inside">
            <div class="item left logo">{% block header_left %}<a href="{{ path('english_home_index') }}"><img
                            src="/images/learning-english-transparent-white.png" width="35"></a>{% endblock %}</div>
            <div class="item middle"><h1>{% block title %}Learning English PRO{% endblock %}</h1></div>
            <div class="item right">{% block header_right %}
                    {% if app.user %}
                        <div class="avatar">{{ app.user.textAvatar }}</div>
                    {% endif %}
                {% endblock %}</div>
        </div>
    </div>
{% endblock %}
{% block outside_main %}
    <div id="main">
        {% block main %}{% endblock %}
    </div>
{% endblock %}
<div class="footer">
    <ul class="menu-footer">
        <li><a href="{{ path('blog_index') }}"><img src="https://writetf.com/logo.png"> </a></li>
        <li><a href="{{ path('english_home_index') }}" class="active"><i class="fas fa-home"></i></a></li>
        <li><a href="{{ path('security_login') }}"><i class="fas fa-user"></i></a></li>
    </ul>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('english') }}
    {% if app.environment == 'prod' %}
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-150392936-1"></script>
        <script>
          window.dataLayer = window.dataLayer || [];

          function gtag() {
            dataLayer.push(arguments);
          }

          gtag('js', new Date());
          gtag('config', 'UA-150392936-1');
        </script>
    {% endif %}
{% endblock %}
</body>
</html>
